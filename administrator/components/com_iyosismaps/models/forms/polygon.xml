<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="title"
			type="text"
			label="COM_IYOSISMAPS_FIELD_TITLE_LABEL"
			description="COM_IYOSISMAPS_FIELD_TITLE_POLYGON_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="catid"
			type="category"
			extension="com_iyosismaps"
			class="inputbox"
			default=""
			label="COM_IYOSISMAPS_FIELD_CATID_LABEL"
			description="COM_IYOSISMAPS_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="COM_IYOSISMAPS_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>
		<field
			name="mapid"
			type="map"
			label="COM_IYOSISMAPS_FIELD_MAP_LABEL"
			description="COM_IYOSISMAPS_FIELD_MAP_DESC"
		/>
		<field
			name="strokecolor"
			type="text"
			label="COM_IYOSISMAPS_FIELD_STROKECOLOR_LABEL"
			description="COM_IYOSISMAPS_FIELD_STROKECOLOR_DESC"
			size="20"
			class="color"
			default="7D0C0C"
		/>
		<field
			name="strokeopacity"
			type="list"
			label="COM_IYOSISMAPS_FIELD_STROKEOPACITY_LABEL"
			description="COM_IYOSISMAPS_FIELD_STROKEOPACITY_DESC"
			size="1"
			class="inputbox"
			default="1.0">
			<option
				value="0.1">0.1</option>
			<option
				value="0.2">0.2</option>
			<option
				value="0.3">0.3</option>
			<option
				value="0.4">0.4</option>
			<option
				value="0.5">0.5</option>
			<option
				value="0.6">0.6</option>
			<option
				value="0.7">0.7</option>
			<option
				value="0.8">0.8</option>
			<option
				value="0.9">0.9</option>
			<option
				value="1.0">1.0</option>
		</field>
		<field
			name="strokeweight"
			type="text"
			label="COM_IYOSISMAPS_FIELD_STROKEWEIGHT_LABEL"
			description="COM_IYOSISMAPS_FIELD_STROKEWEIGHT_DESC"
			size="10"
			class="inputbox"
			default=""
		/>
		<field
			name="fillcolor"
			type="text"
			label="COM_IYOSISMAPS_FIELD_FILLCOLOR_LABEL"
			description="COM_IYOSISMAPS_FIELD_FILLCOLOR_DESC"
			size="20"
			class="color"
			default="7D0C0C"
		/>
		<field
			name="fillopacity"
			type="list"
			label="COM_IYOSISMAPS_FIELD_FILLOPACITY_LABEL"
			description="COM_IYOSISMAPS_FIELD_FILLOPACITY_DESC"
			size="1"
			class="inputbox"
			default="0.2">
			<option
				value="0.1">0.1</option>
			<option
				value="0.2">0.2</option>
			<option
				value="0.3">0.3</option>
			<option
				value="0.4">0.4</option>
			<option
				value="0.5">0.5</option>
			<option
				value="0.6">0.6</option>
			<option
				value="0.7">0.7</option>
			<option
				value="0.8">0.8</option>
			<option
				value="0.9">0.9</option>
			<option
				value="1.0">1.0</option>
		</field>
		<field
			name="coordinates"
			type="textarea"
			label="COM_IYOSISMAPS_FIELD_COORDINATES_LABEL"
			description=""
			rows="15"
			cols="8"
			class="inputbox"
			default=""
		/>
		<field
			name="infowindow"
			type="list"
			label="COM_IYOSISMAPS_FIELD_INFOWINDOW_LABEL"
			description=""
			class="inputbox"
			size="1"
			default="0">
			<option
				value="1">JENABLED</option>
			<option
				value="0">JDISABLED</option>
		</field>
		<field
			name="description"
			type="editor"
			label="COM_IYOSISMAPS_FIELD_DESCRIPTION_LABEL"
			class="inputbox"
			buttons="true"
			filter="safehtml"
		/>
	</fieldset>
</form>
