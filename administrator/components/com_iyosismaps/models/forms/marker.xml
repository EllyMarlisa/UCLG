<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="title"
			type="text"
			label="COM_IYOSISMAPS_FIELD_TITLE_LABEL"
			description="COM_IYOSISMAPS_FIELD_TITLE_MARKER_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="catid"
			type="category"
			extension="com_iyosismaps"
			class="inputbox"
			default=""
			label="COM_IYOSISMAPS_FIELD_CATID_LABEL"
			description="COM_IYOSISMAPS_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="COM_IYOSISMAPS_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>
		<field
			name="mapid"
			type="map"
			label="COM_IYOSISMAPS_FIELD_MAP_LABEL"
			description="COM_IYOSISMAPS_FIELD_MAP_DESC"
		/>
		<field
			name="iconid"
			type="icon"
			label="COM_IYOSISMAPS_FIELD_ICON_LABEL"
			description="COM_IYOSISMAPS_FIELD_ICON_DESC"
		/>
		<field
			name="latitude"
			type="text"
			label="COM_IYOSISMAPS_FIELD_MARKER_LATITUDE_LABEL"
			description="COM_IYOSISMAPS_FIELD_MARKER_LATITUDE_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="longitude"
			type="text"
			label="COM_IYOSISMAPS_FIELD_MARKER_LONGITUDE_LABEL"
			description="COM_IYOSISMAPS_FIELD_MARKER_LONGITUDE_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="infowindow"
			type="list"
			label="COM_IYOSISMAPS_FIELD_INFOWINDOW_LABEL"
			description=""
			class="inputbox"
			size="1"
			default="0">
			<option
				value="1">JENABLED</option>
			<option
				value="0">JDISABLED</option>
		</field>
		<field
			name="description"
			type="editor"
			label="COM_IYOSISMAPS_FIELD_DESCRIPTION_LABEL"
			class="inputbox"
			buttons="true"
			filter="safehtml"
		/>
	</fieldset>
</form>
